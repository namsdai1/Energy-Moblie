<div style="padding: 100px;">
    <div class="row">
        <div class="col-sm-6" style="margin-bottom: 20px">
            <h2
                style="color: teal; font-family:-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif">
                EDIT PRODUCT</h2>
        </div>
        <div class="col-sm-6 text-right">
            <button type="button" class="btn btn-dark" onclick="goBack()">List Product</button>

        </div>
    </div>


    <form action="/product/edit-product/{{product._id}}" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="nameProduct" class="col-form-label">Name Product</label>
            <input class="form-control" type="text" id="nameProduct" name="nameProduct" value="{{product.nameProduct}}"
                required />
            {{!-- <div class="valid-feedback">Looks good!</div> --}}
        </div>

        <div class="form-group">
            <label for="price" class="col-form-label">Price</label>
            <input class="form-control" id="price" name="price" type="text" value="{{product.price}}" required>
        </div>
        <div class="form-group">
            <label for="material" class="col-form-label">Material</label>
            <input class="form-control" type="text" id="material" name="material" value="{{product.material}}">
        </div>
        <div class="form-group">
            <label class="col-form-label" for="idType">Category</label>
            <select class="custom-select" id="idType" name="idType" required>
                {{#each store}}
                {{#if (soSanh this._id ../product.idType)}}
                <option selected value="{{this._id}}">
                    {{this.nameClass}}
                </option>
                {{else}}
                <option value="{{this._id}}">
                    {{this.nameClass}}
                </option>

                {{/if}}
                {{/each}}
            </select>

        </div>
        <div class="form-group">
            <label class="col-form-label">Image</label>

            <div class="input-group">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="imgProduct" name="imgProduct" />
                    <label class="custom-file-label" for="imgProduct">Choose
                        file</label>

                </div>
                {{!-- <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button">
                        Open
                    </button>
                </div> --}}
            </div>

            <button type="submit" class="btn btn-primary mt-4 pr-4 pl-4">
                Submit
            </button>
            <div class="form-group">
                <div style="margin-top: 25px" class="form-group">
                    <div><img width="auto" height="200" style="border-radius: 5px;"
                            src="http://localhost:3000/assets/images/{{product.imgProduct}}" alt="" id="showImg"></div>
                </div>
            </div>

    </form>
    <!-- formtarget="submission" -->
    <!-- onclick="goCalculator()">Submit -->

</div>

<script>
    function goBack() {
        window.location.href = '/'
    }

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader()
            reader.onload = function (e) {
                $('#showImg').attr('src', e.target.result)
                $("#showImg").removeClass("d-none");

            }
            reader.readAsDataURL(input.files[0])
        }
    }
    $("#imgProduct").change(function () {
        readURL(this)
    })


</script>